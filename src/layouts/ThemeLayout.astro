---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { DARK_MODE_COOKIE_NAME, HUE_COOKIE_NAME } from '../consts';
import { getThemeData } from '@/lib/themeRuntime';
import Container from './Container.astro';

type Props = {
  title: string;
  description: string;
};

const hue = Astro.cookies.get(HUE_COOKIE_NAME)?.value;
//const dark = Astro.cookies.get(DARK_MODE_COOKIE_NAME)?.value === 'yes';

const { className, style } = getThemeData(hue!, true);

const { title, description } = Astro.props;
---

<html lang="pt-BR" class={className} style={style}>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-pageBg h-full min-h-full">
